{
  "name": "kafka-tool",
  "version": "1.0.0",
  "description": "Cross-platform Kafka Desktop GUI Tool",
  "type": "module",
  "main": "electron/main.cjs",
  "author": "JanzenZhang",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "preview": "electron .",
    "dist:mac": "vite build && electron-builder --mac",
    "dist:win": "vite build && electron-builder --win",
    "dist:linux": "vite build && electron-builder --linux",
    "dist:all": "vite build && electron-builder --mac --win --linux"
  },
  "build": {
    "appId": "com.janzenzhang.kafka-tool",
    "productName": "Kafka Tool",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Kafka Tool"
    },
    "linux": {
      "icon": "build/icon.png",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "maintainer": "JanzenZhang"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "kafkajs": "^2.2.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^26.8.1",
    "lucide-react": "^0.312.0",
    "postcss": "^8.4.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0"
  }
}